@model Analytics_Hub.Models.DTO.RegistrationModel
@{
    ViewData["Title"] = "Registration";
}
<link href="/css/bootstrap.min.css" rel="stylesheet" />
@Html.ValidationSummary()
<div class="container">
    <div class="row">
        <div class="col-md-6 center-block">
            <h3>Registration</h3>
            <form asp-action="Registration" method="post">
                <div class="form-group">
                    <label asp-for="FirstName" class="form-label"><b>First Name*</b></label>
                    <input type="text" asp-for="FirstName" class="form-control thicker-border border-color" placeholder="First Name">
                    <div class="msg">
                        <span class="err" asp-validation-for="FirstName"></span>
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="LastName" class="form-label mt-2"><b>Last Name*</b></label>
                    <input type="text" asp-for="LastName" class="form-control thicker-border border-color" placeholder="Last Name">
                    <div class="msg">
                        <span class="err" asp-validation-for="LastName"></span>
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="Email" class="form-label mt-2"><b>E-Mail*</b></label>
                    <input type="text" asp-for="Email" class="form-control thicker-border border-color" placeholder="E-Mail">
                    <div class="msg">
                        <span class="err" asp-validation-for="Email"></span>
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="Username" class="form-label mt-2"><b>Username*</b></label>
                    <input type="text" asp-for="Username" class="form-control thicker-border border-color" placeholder="Username">
                    <div class="msg">
                        <span class="err" asp-validation-for="Username"></span>
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="Password" class="form-label mt-2"><b>Password* (eg. John@123)</b></label>
                    <input type="password" class="form-control thicker-border border-color" asp-for="Password" placeholder="Password" />
                    <div class="msg">
                        <span class="err" asp-validation-for="Password"></span>
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="PasswordConfirm" class="form-label mt-2"><b>Password Confirm* </b></label>
                    <input type="password" class="form-control thicker-border border-color" asp-for="PasswordConfirm" placeholder="Confirm Password" />
                    <div class="msg">
                        <span class="err" asp-validation-for="PasswordConfirm"></span>
                    </div>
                </div>

               
                
                @if (TempData["msg"] != null)
                {
                    <div class="form-group">
                       <span class="text-info">@TempData["msg"]</span>
                    </div>
                }

                <div class="form-group mt-2">
                    <button type="submit" class="btn btn-primary">Registration</button>
                    <button class="btn btn-success" asp-controller="UserAuthentication" asp-action="Login">
                       Login
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
